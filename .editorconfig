# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true

[*.{yml,json,sh}]
indent_size = 2

[*.sh]
end_of_line = lf

[package.json]
end_of_line = lf

[bin/epgdump.js]
end_of_line = lf

[bin/munin-plugins/*.js]
end_of_line = lf
