{
  "name": "mirakurun",
  "preferGlobal": true,
  "description": "Japanese DTV Tuner Server Service.",
  "version": "2.0.0",
  "homepage": "https://github.com/Chinachu/Mirakurun",
  "keywords": [
    "mirakurun",
    "chinachu",
    "rivarun",
    "arib",
    "isdb",
    "dvb",
    "dvr",
    "dtv",
    "tv"
  ],
  "author": {
    "name": "Yuki KAN",
    "url": "https://github.com/kanreisa"
  },
  "contributors": [
    "rndomhack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Chinachu/Mirakurun.git"
  },
  "bugs": {
    "url": "https://github.com/Chinachu/Mirakurun/issues"
  },
  "license": "Apache-2.0",
  "bin": {
    "mirakurun": "bin/cli.sh",
    "mirakurun-epgdump": "bin/epgdump.js"
  },
  "main": "lib/client.js",
  "scripts": {
    "start": "node --max_old_space_size=256 lib/server.js",
    "debug": "node --max_old_space_size=256 --inspect --debug-brk lib/server.js",
    "start.win32": "node.exe --max_old_space_size=256 bin/init.win32.js",
    "debug.win32": "node.exe --max_old_space_size=256 --inspect --debug-brk bin/init.win32.js",
    "build": "gulp build",
    "watch": "gulp watch",
    "test": "gulp test",
    "clean": "gulp clean",
    "prepublish": "gulp build",
    "preinstall": "node bin/preinstall.js",
    "postinstall": "node bin/postinstall.js",
    "preuninstall": "node bin/preuninstall.js"
  },
  "directories": {
    "doc": "doc",
    "lib": "lib"
  },
  "dependencies": {
    "aribts": "^1.3.3",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "express-openapi": "^0.33.0",
    "ip": "^1.1.4",
    "js-yaml": "^3.7.0",
    "latest-version": "^2.0.0",
    "morgan": "^1.7.0",
    "munin-plugin": "0.0.9",
    "promise-queue": "^2.2.3",
    "sift": "^3.2.6",
    "tail": "^1.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/express": "^4.0.35",
    "@types/ip": "0.0.29",
    "@types/js-yaml": "^3.5.29",
    "@types/morgan": "^1.7.32",
    "@types/node": "6.0.63",
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-mocha": "^3.0.1",
    "gulp-sourcemaps": "^2.4.0",
    "gulp-tslint": "^6.1.1",
    "gulp-typescript": "^3.1.4",
    "tslint": "^3.15.1",
    "typescript": "^2.1.5"
  },
  "engines": {
    "node": ">=6.5.0 <7.0.0"
  },
  "engineStrict": true,
  "os": [
    "linux",
    "darwin",
    "win32"
  ]
}
