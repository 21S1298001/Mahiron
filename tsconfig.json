{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
    ],
    "removeComments": true,
    "module": "NodeNext",
    "sourceMap": true,
    "incremental": true,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/ui"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
