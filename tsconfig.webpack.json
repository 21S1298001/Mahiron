{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/ui/**/*.ts",
    "src/ui/**/*.tsx"
  ]
}
